<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      initMap(<%=time_in_sec(@spot.time2leave)%>, <%=@spot.latitude%>, <%=@spot.longitude%>)
    });
  </script>
<% end %>


<!-- <p id="notice"><%= notice %></p> -->

<p>
  <strong>Time to Leave:</strong>
  <%= time_parser(@spot.time2leave) %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @spot.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @spot.longitude %>
</p>

<p>
    <div id="map"></div>
</p>

<!-- <%= link_to 'Edit', edit_spot_path(@spot) %> | -->
<%= link_to 'Back', spots_path %> |
<%= link_to 'Going', add_going_spots_path(@spot)%> |
<%= link_to 'Taken', @spot, method: :delete, data: { confirm: 'Are you sure?' } %>